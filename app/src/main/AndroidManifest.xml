<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    package = "com.algeriatour">

    <uses-permission
        android:name = "android.permission.ACCESS_NETWORK_STATE"
        tools:remove = "android:maxSdkVersion" />
    <uses-permission
        android:name = "android.permission.INTERNET"
        tools:remove = "android:maxSdkVersion" />

    <application
        android:name = ".utils.User"
        android:allowBackup = "true"
        android:icon = "@mipmap/ic_launcher"
        android:label = "@string/app_name"
        android:roundIcon = "@mipmap/ic_launcher_round"
        android:supportsRtl = "true"
        android:theme = "@style/AppTheme">
        <activity android:name = ".login.LoginActivity" />
        <activity android:name = ".signin.SignInActivity" />
        <activity android:name = ".profile.ProfileActivity" />
        <activity
            android:name = ".main.MainActivity"
            android:label = "@string/title_activity_main" />
        <activity android:name = ".endroit.CentreIntereActivity" />
        <activity android:name = ".villes.VilleActivity" />
        <activity android:name = ".SplashActivity">
            <intent-filter>
                <action android:name = "android.intent.action.MAIN" />

                <category android:name = "android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name = ".resetpassword.ResetPasswordActivity" />
    </application>

</manifest>