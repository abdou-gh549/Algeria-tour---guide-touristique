<resources>

    <!-- Base application theme. -->
    <style name = "AppTheme" parent = "Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
    </style>

    <style name = "loginButton">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">36dp</item>
        <item name = "android:layout_marginEnd">8dp</item>
        <item name = "android:layout_marginStart">8dp</item>
        <item name = "android:layout_marginTop">8dp</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:background">@drawable/bg_button</item>
        <item name = "android:textAllCaps">false</item>
    </style>

    <style name = "roundedLayout">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:background">@drawable/bg_layout_rounded_white</item>
        <item name = "android:elevation">10dp</item>
        <item name = "android:padding">16dp</item>
    </style>

    <style name = "editText">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:ems">10</item>
        <item name = "android:singleLine">true</item>
    </style>

    <style name = "appBarImageButton">
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">30dp</item>
        <item name = "android:layout_margin">10dp</item>

    </style>
    <style name="favotieRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#a3a2a2</item>
        <item name="colorControlActivated">#807f7f</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
    </style>

    <style name = "AppTheme.AppBarOverlay" parent = "ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name = "AppTheme.PopupOverlay" parent = "ThemeOverlay.AppCompat.Light" />

</resources>
