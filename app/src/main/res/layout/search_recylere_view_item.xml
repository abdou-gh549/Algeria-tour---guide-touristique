<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_margin = "5dp"
    app:cardCornerRadius = "1dp"
    app:cardElevation = "1dp"
    app:contentPadding = "5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

        <ImageView
            android:id = "@+id/search_result_item_image"
            android:layout_width = "125dp"
            android:layout_height = "80dp"
            android:scaleType = "centerCrop"
            android:src = "@drawable/wait_image_1"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent" />

        <TextView
            android:id = "@+id/search_result_item_name"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:text = "Musée de Djémila"
            android:textColor = "#000"
            android:textSize = "16dp"
            app:layout_constraintStart_toEndOf = "@+id/search_result_item_image"
            app:layout_constraintTop_toTopOf = "@+id/search_result_item_image" />

        <TextView
            android:id = "@+id/search_result_item_adress"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "8dp"
            android:text = "Djémila"
            app:layout_constraintStart_toEndOf = "@+id/search_result_item_image"
            app:layout_constraintTop_toBottomOf = "@+id/search_result_item_name" />

        <TextView
            android:id = "@+id/search_result_item_type"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "8dp"
            android:background = "@drawable/bg_view_border"
            android:paddingEnd = "5dp"
            android:paddingStart = "5dp"
            android:text = "Musée"
            android:textColor = "#a2324b7d"
            app:layout_constraintStart_toEndOf = "@+id/search_result_item_image"
            app:layout_constraintTop_toBottomOf = "@+id/search_result_item_adress" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
