<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content">

    <TextView
        android:id = "@+id/centre_intere_descreption_ville"

        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "8dp"
        android:text = "Alger, Alger"
        android:textColor = "#c3000000"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/centre_intere_descreption_rattingValue"

        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:text = "4.0"
        android:textColor = "#c3000000"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/centre_intere_descreption_ville" />

    <RatingBar
        android:id = "@+id/centre_intere_descreption_rattingBar"
        style = "?attr/ratingBarStyleSmall"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:numStars = "5"
        android:rating = "4"
        android:stepSize = "0.5"
        android:theme = "@style/favotieRatingBar"
        app:layout_constraintStart_toEndOf = "@+id/centre_intere_descreption_rattingValue"
        app:layout_constraintTop_toBottomOf = "@+id/centre_intere_descreption_ville" />

    <TextView
        android:id = "@+id/centre_intere_descreption_type"

        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:text = "Monument Historique"
        android:textColor = "#c3000000"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/centre_intere_descreption_rattingValue" />

    <TextView
        android:id = "@+id/textView7"

        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "8dp"
        android:text = "Description :"
        android:textColor = "#c3000000"
        android:textStyle = "bold"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/centre_intere_descreption_type" />

    <TextView
        android:id = "@+id/centre_intere_descreption_descreption_txtv"

        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginEnd = "8dp"
        android:layout_marginStart = "8dp"
        android:text = " texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte texte."
        android:textColor = "#c3000000"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/textView7" />

    <android.support.design.internal.BaselineLayout
        android:id = "@+id/baselineLayout"

        android:layout_width = "match_parent"
        android:layout_height = "1dp"
        android:layout_marginTop = "8dp"
        android:background = "#c3b3b3b3"
        android:textColor = "#c3000000"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/centre_intere_descreption_descreption_txtv" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "8dp"
        android:text = "Avis des membres"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/baselineLayout" />

</android.support.constraint.ConstraintLayout>