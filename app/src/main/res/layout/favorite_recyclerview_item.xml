<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_margin = "2.5dp"
    android:background = "@drawable/bg_layout_white"
    android:elevation = "3dp"
    android:paddingBottom = "5dp">

    <ImageView
        android:id = "@+id/favorite_recyclerItem_endroitImage"
        android:layout_width = "112dp"
        android:layout_height = "78dp"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "8dp"
        android:scaleType = "centerCrop"
        android:src = "@drawable/wait_image_2"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/favorite_recyclerItem_titre"
        android:layout_width = "151dp"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:text = "Ruin De Jmila"
        android:textColor = "#000"
        android:textSize = "16dp"
        app:layout_constraintStart_toEndOf = "@+id/favorite_recyclerItem_endroitImage"
        app:layout_constraintTop_toTopOf = "@+id/favorite_recyclerItem_endroitImage" />

    <TextView
        android:id = "@+id/favorite_recyclerItem_adress"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:text = "Djémila - Batna"
        app:layout_constraintStart_toEndOf = "@+id/favorite_recyclerItem_endroitImage"
        app:layout_constraintTop_toBottomOf = "@+id/favorite_recyclerItem_titre" />

    <TextView
        android:id = "@+id/favorite_recyclerItem_type"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"

        android:text = "Site Touristique"
        app:layout_constraintStart_toEndOf = "@+id/favorite_recyclerItem_endroitImage"
        app:layout_constraintTop_toBottomOf = "@+id/favorite_recyclerItem_adress" />

    <TextView
        android:id = "@+id/favorite_recyclerItem_rattingTextView"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:text = "3.0"
        app:layout_constraintStart_toEndOf = "@+id/favorite_recyclerItem_endroitImage"
        app:layout_constraintTop_toBottomOf = "@+id/favorite_recyclerItem_type" />

    <RatingBar
        android:id = "@+id/favorite_recyclerItem_rattingBar"
        style = "?attr/ratingBarStyleSmall"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:numStars = "5"
        android:rating = "3"
        android:stepSize = "0.5"
        android:theme = "@style/favotieRatingBar"
        app:layout_constraintStart_toEndOf = "@+id/favorite_recyclerItem_rattingTextView"
        app:layout_constraintTop_toBottomOf = "@+id/favorite_recyclerItem_type" />

    <ImageButton
        android:id = "@+id/favorite_recyclerItem_delete"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginEnd = "16dp"
        android:layout_marginTop = "8dp"
        android:background = "@null"
        android:src = "@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/textView6"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "16dp"
        android:text = "Note : "
        android:textStyle = "bold"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/baselineLayout2" />

    <TextView
        android:id = "@+id/favorite_recyclerItem_note"
        android:layout_width = "268dp"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:text = " Je veux visiter cet endroit l'année prochaine, mon amis me l'a conseillé !"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/textView6" />

    <ImageButton
        android:id = "@+id/favorite_recyclerItem_edit"
        android:layout_width = "21dp"
        android:layout_height = "20dp"
        android:layout_marginEnd = "16dp"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "8dp"
        android:background = "@null"
        android:src = "@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintHorizontal_bias = "1.0"
        app:layout_constraintStart_toEndOf = "@+id/textView6"
        app:layout_constraintTop_toTopOf = "@+id/favorite_recyclerItem_note" />

    <android.support.design.internal.BaselineLayout
        android:id = "@+id/baselineLayout2"
        android:layout_width = "match_parent"
        android:layout_height = "1dp"
        android:layout_marginEnd = "16dp"
        android:layout_marginStart = "16dp"
        android:layout_marginTop = "8dp"
        android:background = "#DDD"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintHorizontal_bias = "1.0"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/favorite_recyclerItem_endroitImage" />
</android.support.constraint.ConstraintLayout>